{
  "name": "node-express-mongoose-starter",
  "version": "3.0.0",
  "description": "A Boilerplate application for building REST APIs using node, express and mongoose",
  "author": "Brijesh Bhakta <brijeshbhakta30@gmail.com>",
  "main": "index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development DEBUG=node-server:* nodemon index.js",
    "dev:debug": "cross-env NODE_ENV=development DEBUG=node-server:* nodemon --inspect index.js",
    "lint-help": "eslint -h",
    "lint": "eslint *.js src --color",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged && npm test",
    "prepare": "husky",
    "start": "node index",
    "start:debug": "cross-env DEBUG=node-server:* npm start",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brijeshbhakta30/node-express-mongoose-starter.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "starter",
    "starter code",
    "es6",
    "es7",
    "jest",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "es2018",
    "es2019",
    "es2020",
    "es2021",
    "es2022",
    "es2023",
    "es2024",
    "eslint",
    "javascript",
    "lint",
    "REST",
    "API",
    "REST API",
    "boilerplate",
    "promises",
    "async await"
  ],
  "dependencies": {
    "bcrypt": "6.0.0",
    "compression": "1.8.0",
    "cors": "2.8.5",
    "debug": "4.4.1",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "express-jwt": "8.5.1",
    "express-validation": "4.1.1",
    "helmet": "8.1.0",
    "http-status": "2.1.0",
    "joi": "17.4.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "method-override": "3.0.0",
    "mongoose": "8.15.1",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@faker-js/faker": "9.8.0",
    "@types/express": "5.0.3",
    "cross-env": "7.0.3",
    "eslint": "9.28.0",
    "eslint-config-blazex": "0.0.22",
    "husky": "9.1.7",
    "jest": "30.0.0",
    "lint-staged": "15.5.2",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "3.1.10",
    "supertest": "7.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
